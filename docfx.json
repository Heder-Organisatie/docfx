{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "styles/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "_exported_templates/modern"
    ],
    "globalMetadata": {
      "_appName": "Heder Informatie Platform - HIP",
      "_appTitle": "Heder Informatie Platform - HIP",
      "_enableSearch": true,
      "_appFaviconPath": "images/favicon.ico",
      "_appLogoPath": "images/HIP_Wit.png",
      "_disableContribution": true,
      "pdf": false
    }
  }
}
